{
    "extends": ["tslint:recommended","tslint:latest"],
    "formatter": "json",
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "no-var-requires": false,
        "no-return-await": true,
        "no-submodule-imports": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": [
            true,
            160
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-console": true,
        "curly": [
            true,
            "as-needed"
        ],
        "object-literal-sort-keys": false
    }
}